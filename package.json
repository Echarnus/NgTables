{
  "name": "ng-tables",
  "version": "1.0.0",
  "description": "Advanced table component for Angular with frozen columns, expandable rows, and full accessibility support",
  "main": "dist/ng-tables/index.js",
  "module": "dist/ng-tables/fesm2022/ng-tables.mjs",
  "types": "dist/ng-tables/index.d.ts",
  "scripts": {
    "ng": "ng",
    "start": "ng serve sample",
    "build": "ng build ng-tables",
    "build:sample": "ng build sample",
    "build:sample:prod": "ng build sample --configuration production",
    "watch": "ng build ng-tables --watch --configuration development",
    "test": "ng test ng-tables",
    "test:headless": "ng test ng-tables --browsers=ChromeHeadlessCI --watch=false",
    "lint": "echo 'No linting configured'",
    "prepare": "npm run build"
  },
  "keywords": [
    "angular",
    "table",
    "component",
    "data-table",
    "frozen-columns",
    "expandable-rows",
    "accessibility",
    "typescript"
  ],
  "author": "Kenneth De Clercq",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Echarnus/NgTables.git"
  },
  "bugs": {
    "url": "https://github.com/Echarnus/NgTables/issues"
  },
  "homepage": "https://github.com/Echarnus/NgTables#readme",
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "peerDependencies": {
    "@angular/common": "^19.0.0 || ^20.0.0",
    "@angular/core": "^19.0.0 || ^20.0.0"
  },
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.1",
    "@angular/cli": "^20.3.1",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.3.0",
    "typescript": "~5.9.2"
  }
}